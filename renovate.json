{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
      ".old/","example/"
  ],
  "labels": [
    "Renovate",
    "dependencies"
  ],
  "packageRules": [
    { 
     "matchPackagePatterns": ["npm"],
     "labels": ["javascript"],
     "matchPackagePatterns": ["github-actions"],
     "labels": ["github_actions"],
     "matchPackagePatterns": ["dockerfile"],
     "labels": ["dockerfile"],
     "matchPackagePatterns": ["nvm"],
     "labels": ["nvm"] 
    }
  ]
}
